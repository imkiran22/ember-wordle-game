<div class="keyboard">
  <section class="keys-section">
    <div>{{#each this.keyboardFirstRow as |board index|}}
      <button data-test-id={{board.key}} class={{board.className}}
        {{action this.pressKey board.key}}>{{board.key}}</button>
      {{/each}}
    </div>

    <div>{{#each this.keyboardSecondRow as |board index|}}
      <button data-test-id={{board.key}} class={{board.className}}
        {{action this.pressKey board.key}}>{{board.key}}</button>
      {{/each}}
    </div>



    <div>{{#each this.keyboardThirdRow as |board index|}}
      <button data-test-id={{board.key}} class={{board.className}} {{action this.pressKey board.key}}>
        {{#if (equal-string board.key "Backspace")}}
        <i class="fa fa-arrow-circle-left"></i>
        {{else}}
        {{board.key}}
        {{/if}}

      </button>
      {{/each}}
    </div>

  </section>

</div>